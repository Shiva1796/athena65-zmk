#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/rgb.h>
#include <dt-bindings/zmk/outputs.h>

// Layers
#define DEFAULT 0
#define RGB     1
#define CONTROL 2

&mt {
    flavor = "tap-preferred";
    tapping-term-ms = <200>;
};

/ {
    keymap {
        compatible = "zmk,keymap";
        

        default_layer {
            // ------------------------------------------------------------------------------------------------------------------------
            // | ESC |  1  |  2  |  3  |  4  |  5  |  6  |  7  |  8  |  9  |  0  |  -  |  =  | BSPC|DEL|           |  PG_UP  |
            // | TAB  |  Q  |  W  |  E  |  R  |  T  |  Y  |  U  |  I  |  O  |  P  |  [  |  ]  |   \                |  PG_DN  |
            // | CAPS  |  A  |  S  |  D  |  F  |  G  |  H  |  J  |  K  |  L  |  ;  |  '  |     ENTER               |  DEL    |
            // |SHIFT|\|  Z  |  X  |  C  |  V  |  B  |  N  |  M  |  ,  |  .  |  /  |     SHIFT           |   UP   ||  HOME   |
            // |  CTL  |  WIN  |  ALT  |  PG_UP  |      SPACE        |  PG_DN  |  ALT  |  CTRL  |  LEFT  |  DOWN  |  RIGHT  
            // ------------------------------------------------------------------------------------------------------------------------

            bindings = <
&mt TILDE ESC   &kp N1     &kp N2  &kp N3   &kp N4    &kp N5  &kp N6   &kp N7   &kp N8    &kp N9   &kp N0    &kp MINUS &kp EQUAL &kp BSPC &kp DEL               &kp PG_UP
&kp TAB   &kp Q      &kp W    &kp E    &kp R     &kp T   &kp Y    &kp U    &kp I     &kp O    &kp P     &kp LBKT  &kp RBKT  &kp BSLH                            &kp PG_DN  
&kp CLCK  &kp A      &kp S    &kp D    &kp F     &kp G   &kp H    &kp J    &kp K     &kp L    &kp SEMI  &kp SQT             &kp RET                             &kp DEL
&kp LSHFT &kp BSLH   &kp Z    &kp X    &kp C     &kp V   &kp B    &kp N    &kp M     &kp COMMA &kp DOT  &kp FSLH  &kp RSHFT  &kp UP                             &mo RGB
&kp LCTRL &kp LGUI   &kp LALT          &kp SPACE          &kp SPACE         &kp SPACE            &kp RALT  &kp RCTRL &kp LEFT  &kp DOWN  &kp RIGHT            
            >;

            sensor-bindings = <&inc_dec_kp C_VOL_UP C_VOL_DN>;
        };

        rgb_layer {
    // -----------------------------------------------------------------------------------
    // | BT0 |  F1 |  F2 |  F3 |  F4 |  F5 |  F6 |  F7 |  F8 |  F9 | F10 | F11 | F12 |  DEL | BSPC | PG_UP |
    // | BT1 | HUE+| SAT+| BRI+| SPD+|  FX+|  —  |  —  |  —  |  —  |  —  |  —  |  —  |  —          | PG_DN |
    // | BT2 | HUE-| SAT-| BRI-| SPD-|  FX-|  —  |  —  |  —  |  —  |  —  |  —  |  —                |  DEL |
    // | BT3 |  —  |  —  |  —  |  —  |  —  |  —  | MUTE|  —  |  —  |  —  |  —  |  —  | VOL↑        | MO CTRL |
    // | BT4 | STU | RGB_TOG| LALT| SPACE| PLAY/PAUSE | SPACE | RALT | RCTRL  | PREV | VOL↓ | NEXT |
    // -----------------------------------------------------------------------------------

             bindings = <
 &bt BT_SEL 0    &kp F1            &kp F2              &kp F3              &kp F4              &kp F5          &kp F6   &kp F7   &kp F8    &kp F9   &kp F10    &kp F11 &kp F12 &kp DEL &kp BSPC      &kp PG_UP
 &bt BT_SEL 1   &rgb_ug RGB_HUI   &rgb_ug RGB_SAI	    &rgb_ug RGB_BRI    &rgb_ug RGB_SPI     &rgb_ug RGB_EFF &trans    &trans    &trans     &trans    &trans     &trans  &trans  &trans            &kp PG_DN  
 &bt BT_SEL 2   &rgb_ug RGB_HUD   &rgb_ug RGB_SAD    &rgb_ug RGB_BRD   &rgb_ug RGB_SPD     &rgb_ug RGB_EFR   &trans    &trans    &trans     &trans    &trans  &trans             &trans              &kp DEL
 &bt BT_SEL 3 &trans   &bt BT_CLR_ALL    &bt BT_CLR             &trans              &trans              &trans          &kp C_MUTE &trans     &trans &trans  &trans &trans           &kp C_VOL_UP                &trans
 &studio_unlock   &rgb_ug RGB_TOG &trans         &kp SPACE          &kp C_PLAY_PAUSE         &kp SPACE            &kp RALT  &kp RCTRL                         &kp C_PREV &kp C_VOL_DN  &kp C_NEXT            
            >;


            sensor-bindings = <&inc_dec_kp C_VOL_UP C_VOL_DN>;
        };

        control_layer {
    // --------------------------------------------------------------------------------------------------------
    // | BT CLR | BT1 | BT2 | BT3 | BT4 | BT5 | OUT_BT | OUT_USB | STU |   –  |   –  |   –  |   –  | SOFTOFF | BOOTLDR |   –   |
    // |  BT1   | BT2 | BT3 | BT4 | BT5 |   –  | OUT_BT | OUT_USB | STU |   –  |   –  |   –  |   –  |    –    |   –     |
    // |  RGBTG | FX+ | HUE+| SAT+| BRI+| SPD+|   –    |   –     |   – |   –  |   –  |   –  |   –  |   –     |
    // |   –    |  –  |  –  |  –  |  –  |  –  |  –     |  –      |  –  |  –   |  –   |  –   |  –   |   –     |   –     |
    // |   –    |  –  |            – SPACE –            |   –     |   –  |   –  |   –  |   –  |   –  |
    // --------------------------------------------------------------------------------------------------------
    bindings = <
    &bt BT_CLR   &bt BT_SEL 0 &bt BT_SEL 1 &bt BT_SEL 2 &bt BT_SEL 3 &bt BT_SEL 4 &out OUT_BLE &out OUT_USB  &studio_unlock  &trans &trans &trans &bootloader &trans        &trans  &trans
    &bt BT_SEL 0  &bt BT_SEL 1 &bt BT_SEL 2 &bt BT_SEL 3 &bt BT_SEL 4 &trans  &out OUT_BLE  &out OUT_USB  &studio_unlock  &trans  &trans  &trans  &trans  &trans                  &trans
    &rgb_ug RGB_TOG  &rgb_ug RGB_EFF  &rgb_ug RGB_HUI  &rgb_ug RGB_SAI &rgb_ug RGB_BRI  &rgb_ug RGB_SPI  &trans  &trans  &trans  &trans  &trans  &trans  &trans                 &trans
    &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans                                                              &trans
    &trans  &trans              &trans                  &trans               &trans &trans                      &trans  &trans          &trans  &trans  &trans
    >;

            sensor-bindings = <&inc_dec_kp C_VOL_UP C_VOL_DN>;
        };
        
        // Add reserved layers for ZMK Studio to use
        extra_layer_1 {       
            status = "reserved";
        };
        
        extra_layer_2 {
            status = "reserved";
        };
    };

    combos {
        compatible = "zmk,combos";
        combo_control {
            timeout-ms = <50>;
            key-positions = <60 61>; 
            bindings = <&mo CONTROL>;
        };
    };
};